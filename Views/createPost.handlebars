<form class="border p-4 rounded">
  <div class="form-group">
    <h2 class="p-1">Create a new Post</h2>
    <label for="postTitle">Title</label> <!-- Added id for label -->
    <input
      type="text" <!-- Changed input type to "text" for title -->
      class="form-control"
      id="postTitle" <!-- Added id for input field -->
      placeholder="Enter title"
    />
  </div>
  <div class="form-group">
    <label for="postContent">Content</label> <!-- Added id for label -->
    <textarea
      class="form-control"
      id="postContent" <!-- Added id for textarea -->
      rows="5" <!-- Increased rows for textarea -->
      placeholder="Enter content"
    ></textarea>
  </div>
  <div class="row justify-content-center">
    <button type="submit" class="col-md-5 btn btn-dark mr-2">
      Create
    </button>
  </div>
</form>
