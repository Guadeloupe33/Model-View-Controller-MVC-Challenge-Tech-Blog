<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <form class="border p-4 rounded" id="form-submit">
        <h2 class="text-center mb-4">Login</h2>
        <div class="form-group">
          <label for="email-login">Email:</label>
          <input type="email" class="form-control" id="email-login" placeholder="Enter email" />
        </div>
        <div class="form-group">
          <label for="password-login">Password:</label>
          <input type="password" class="form-control" id="password-login" placeholder="Password" />
        </div>
        <div class="text-center">
          <button id="login-button" type="submit" class="btn btn-dark col-md-5">Login</button>
        </div>
      </form>
      <form class="border p-4 rounded mt-4" id="form-signup">
        <h2 class="text-center mb-4">Create an Account</h2>
        <div class="form-group">
          <label for="name-signup">Full Name:</label>
          <input type="input" class="form-control" id="name-signup" placeholder="Full Name" />
        </div>
        <div class="form-group">
          <label for="email-signup">Email:</label>
          <input type="email" class="form-control" id="email-signup" placeholder="Enter email" />
        </div>
        <div class="form-group">
          <label for="password-signup">Password:</label>
          <input type="password" class="form-control" id="password-signup" placeholder="Password" />
        </div>
        <div class="text-center">
          <button type="submit" class="btn btn-dark col-md-5">Sign Up!</button>
        </div>
      </form>
    </div>
  </div>
</div>
